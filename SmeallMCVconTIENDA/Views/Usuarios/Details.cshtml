@model proyectoWEBSITESmeall.Models.Usuario

@{
    ViewData["Title"] = "Detalle de Usuario";
}

<section class="vh-500 bg-image"
         style="background-image: url('https://i.pinimg.com/564x/4b/fb/d7/4bfbd74b2e60ee2d30b2090b8ae86176.jpg');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="text-center my-4">
                <img src="~/img/logo_SML.jpeg" class="logo" alt="logo" />
            </div>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Detalle del Usuario</h2>
                            <hr class="bg-light" />

                            <dl class="row">
                                <dt class="col-sm-4">Nombre Usuario</dt>
                                <dd class="col-sm-8">@Model.NombreUsuario</dd>

                                <dt class="col-sm-4">Nombres</dt>
                                <dd class="col-sm-8">@Model.Nombres</dd>

                                <dt class="col-sm-4">Apellidos</dt>
                                <dd class="col-sm-8">@Model.Apellidos</dd>

                                <dt class="col-sm-4">DNI</dt>
                                <dd class="col-sm-8">@Model.Dni</dd>

                                <dt class="col-sm-4">Teléfono</dt>
                                <dd class="col-sm-8">@Model.Telefono</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Género</dt>
                                <dd class="col-sm-8">@Model.Genero</dd>

                                <dt class="col-sm-4">Área Asignada</dt>
                                <dd class="col-sm-8">@Model.AreaAsignada</dd>

                                <dt class="col-sm-4">Rol</dt>
                                <dd class="col-sm-8">@Model.Rol</dd>

                                <dt class="col-sm-4">Fecha de Registro</dt>
                                <dd class="col-sm-8">@Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Última Actualización</dt>
                                <dd class="col-sm-8">@Model.FechaActualizacion?.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-outline-primary">Editar</a>
                                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
