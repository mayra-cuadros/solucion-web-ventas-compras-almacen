@model proyectoWEBSITESmeall.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<section class="vh-500 bg-image"
         style="background-image: url('https://i.pinimg.com/564x/4b/fb/d7/4bfbd74b2e60ee2d30b2090b8ae86176.jpg');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="text-center my-4">
                <img src="~/img/logo_SML.jpeg" class="logo" />
            </div>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Editar Usuario</h2>
                            <hr class="bg-light" />

                            <form asp-action="Edit" method="post" onsubmit="return confirm('¿Estás seguro de que deseas guardar los cambios?');">
                                @* Campo oculto para el ID *@
                                <input type="hidden" asp-for="IdUsuario" />

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Nombre de Usuario*</label>
                                    <input asp-for="NombreUsuario" class="form-control" />
                                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Nombres*</label>
                                    <input asp-for="Nombres" class="form-control" />
                                    <span asp-validation-for="Nombres" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Apellidos*</label>
                                    <input asp-for="Apellidos" class="form-control" />
                                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">DNI*</label>
                                    <input asp-for="Dni" class="form-control" />
                                    <span asp-validation-for="Dni" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Teléfono*</label>
                                    <input asp-for="Telefono" class="form-control" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Email*</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Contraseña*</label>
                                    <input asp-for="Contrasena" class="form-control" type="password" />
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Área Asignada*</label>
                                    <select asp-for="AreaAsignada" class="form-select">
                                        <option value="">Seleccione un área</option>
                                        <option value="Area de Ventas">Área de Ventas</option>
                                        <option value="Area de Compras">Área de Compras</option>
                                        <option value="Area de Almacén">Área de Almacén</option>
                                        <option value="Administración General">Administración General</option>
                                    </select>
                                    <span asp-validation-for="AreaAsignada" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <h6 class="mb-2 pb-1">Género*: </h6>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Genero" value="Mujer"
                                               checked="@Model.Genero == " Mujer"" />
                                        <label class="form-check-label">Mujer</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Genero" value="Hombre"
                                               checked="@Model.Genero == " Hombre"" />
                                        <label class="form-check-label">Hombre</label>
                                    </div>
                                    <span asp-validation-for="Genero" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label">Rol*</label>
                                    <input asp-for="Rol" class="form-control" />
                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-outline-success">Guardar Cambios</button>
                                </div>

                                <div class="mt-3 text-center">
                                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
