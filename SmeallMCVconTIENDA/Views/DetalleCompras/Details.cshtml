@model proyectoWEBSITESmeall.Models.DetalleCompra

@{
    ViewData["Title"] = "Detalles del Pedido";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<section class="vh-200 bg-image"
         style="background-image: url('https://i.pinimg.com/564x/87/b4/ec/87b4ec77c3496494ddb871b1213823ef.jpg');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="text-center my-4">
                <img src="~/img/logo_SML.jpeg" class="logo">
            </div>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Detalles del Pedido Realizado</h2>
                            <hr class="bg-light" />

                            <dl class="row">
                                <dt class="col-sm-4">Compra</dt>
                                <dd class="col-sm-8">@Model.IdCompraNavigation.IdCompra</dd>

                                <dt class="col-sm-4">Producto</dt>
                                <dd class="col-sm-8">@Model.IdProductoNavigation.IdProducto</dd>

                                <dt class="col-sm-4">Cantidad</dt>
                                <dd class="col-sm-8">@Model.Cantidad</dd>

                                <dt class="col-sm-4">Precio Unitario (S/.)</dt>
                                <dd class="col-sm-8">@Model.PrecioUnitario.ToString("F2")</dd>

                                <dt class="col-sm-4">Precio Total (S/.)</dt>
                                <dd class="col-sm-8">@((Model.Cantidad * Model.PrecioUnitario).ToString("F2"))</dd>

                                <dt class="col-sm-4">Fecha Registro</dt>
                                <dd class="col-sm-8">@Model.FechaRegistro?.ToString("g")</dd>

                                <dt class="col-sm-4">Fecha Actualización</dt>
                                <dd class="col-sm-8">@Model.FechaActualizacion?.ToString("g")</dd>
                            </dl>

                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@Model.IdDetalleCompra" class="btn btn-outline-info me-2">Editar</a>
                                <a asp-action="Index" class="btn btn-outline-info">Volver a la Lista</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
