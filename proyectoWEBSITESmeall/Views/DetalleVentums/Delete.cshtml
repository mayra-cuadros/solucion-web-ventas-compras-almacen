@model proyectoWEBSITESmeall.Models.DetalleVentum

@{
    ViewData["Title"] = "Eliminar";
}

<section class="vh-200 bg-image"
         style="background-image: url('https://e1.pxfuel.com/desktop-wallpaper/125/698/desktop-wallpaper-fondos-de-whatsapp-aesthetic-pastel-grey.jpg');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="text-center my-4">
                <img src="../img/logo_SML.jpeg" class="logo" />
            </div>
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Confirmar Eliminación</h2>
                            <hr class="bg-light" />

                            <h4 class="mb-4 text-center">¿Estás seguro que deseas eliminar este registro?</h4>

                            <dl class="row mb-4">
                                <dt class="col-sm-4">Cantidad</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>

                                <dt class="col-sm-4">Precio Unitario</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.PrecioUnitario)</dd>

                                <dt class="col-sm-4">Fecha Registro</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaRegistro)</dd>

                                <dt class="col-sm-4">Fecha Actualización</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaActualizacion)</dd>

                                <dt class="col-sm-4">Producto</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdProductoNavigation.IdProducto)</dd>

                                <dt class="col-sm-4">Venta</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdVentaNavigation.IdVenta)</dd>
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="IdDetalleVenta" />
                                <div class="d-flex justify-content-center gap-3">
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
